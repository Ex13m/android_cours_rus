<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/kozha">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/courseName"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/courseLevel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/courseLevel_1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />

        <Button
            android:text="@string/btnTextLesson1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson1"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson2"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson3"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson4"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson5"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson6"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson7"
            android:textSize="12sp" />

        <Button
            android:text="@string/btnTextLesson8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTextLesson8"
            android:textSize="12sp" />

        <TextView
            android:text="@string/testTextBtnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/testTextBtnClick"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>
